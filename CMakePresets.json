{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Base",
      "binaryDir": "${sourceDir}/build/default",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "hidden": true
    },
    {
      "name": "ci-linux",
      "displayName": "CI Linux",
      "inherits": [
        "base"
      ],
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "FANS_BUILD_STATIC": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ci-linux",
      "displayName": "CI Linux",
      "configurePreset": "ci-linux"
    }
  ],
  "testPresets": [
    {
      "name": "ci-linux",
      "displayName": "CI Linux",
      "configurePreset": "ci-linux"
    }
  ]
